{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "rootDir": "src",
    "plugins": [
      {
        "name": "ts-graphql-plugin",
        "schema": "./src/schema.graphql"
      }
    ],
    "typeRoots": ["node_modules/@types", "types"]
  },
  "include": ["src"]
}
